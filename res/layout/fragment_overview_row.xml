    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LinearLayout_parent"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip" 
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/LinearLayout_TitleRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginLeft="0dp">
             
            <TextView
                android:id="@+id/overivew_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="New Commit to jake"
                android:textSize="16sp" 
                />

            <TextView
                android:id="@+id/overivew_row_date"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-06-01"
                android:textSize="12sp" 
                />
        </LinearLayout>

        <TextView
            android:id="@+id/overivew_row_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp" />
        
    </LinearLayout>